<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/course_content"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/courseone_iv"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:scaleType="fitXY"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                 />
                <ImageView
                android:id="@+id/isxuewei1_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/course_degree"
                android:layout_alignLeft="@+id/courseone_iv"
                android:visibility="gone"
                 />
            <TextView
                android:id="@+id/coursename1_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/courseone_iv"
                android:layout_marginLeft="10dp"
                android:text=" "
                android:textColor="@color/black"
                android:textSize="@dimen/size14" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/two_rly"
            android:layout_marginBottom="5dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/coursetwo_iv"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginBottom="5dp"
                android:scaleType="fitXY"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                 />
			 <ImageView
                android:id="@+id/isxuewei2_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/course_degree"
                android:layout_alignLeft="@+id/coursetwo_iv"
                android:visibility="gone"
                 />
            <TextView
                android:id="@+id/coursename2_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/coursetwo_iv"
                android:layout_marginLeft="10dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/size14" />
        </RelativeLayout>
    </LinearLayout>

</merge>