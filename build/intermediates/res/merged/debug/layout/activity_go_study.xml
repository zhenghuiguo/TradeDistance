<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/course_fragment_bg"
    android:orientation="vertical" >

    <!-- <FrameLayout android:layout_width="match_parent" android:background="@color/black"  android:layout_height="wrap_content"> -->

    <RelativeLayout
        android:id="@+id/rll1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/black"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/titlebarleftrithtsize"
            android:layout_height="@dimen/titlebarleftrithtsize"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/return_top" />
        <!--
            <ImageView
            android:id="@+id/iv_play_bg"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:background="@color/black" />
        -->


        <!--
             <TextView
            android:id="@+id/tv_play_bg"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:alpha="0.5"
            android:background="@color/black" />
        -->

        <ImageView
            android:id="@+id/iv_play"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@drawable/play1" />

        <!-- <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            layout="@layout/controler1" /> -->
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/coursename_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="投资银行学原理"
                android:textColor="@color/black"
                android:textSize="@dimen/size16" />

            <TextView
                android:id="@+id/zhujiaojiaoshi_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主讲教师 ：林个个"
                android:textColor="@color/name_color"
                android:textSize="@dimen/size12" />
        </LinearLayout>

        <!-- <ImageView
            android:id="@+id/dianzhan_iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/starred" /> -->
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lly"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:gravity="top" >

        <RelativeLayout
            android:id="@+id/mulu_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/mlcolor_tv"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/tv_tab_selected" />

            <TextView
                android:id="@+id/ml_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="目录"
                android:textColor="@color/black" />
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/white" />

        <RelativeLayout
            android:id="@+id/zuoye_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/tab_grey" >

            <TextView
                android:id="@+id/zy_color_tv"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/tv_tab_selected" />

            <TextView
                android:id="@+id/zy_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="作业"
                android:textColor="@color/white" />
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/white" />

        <RelativeLayout
            android:id="@+id/dagang_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/tab_grey" >

            <TextView
                android:id="@+id/fxdgcolor_tv"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/tv_tab_selected" />

            <TextView
                android:id="@+id/fxdg_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="复习大纲"
                android:textColor="@color/white" />
        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/content_gostudyid"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>