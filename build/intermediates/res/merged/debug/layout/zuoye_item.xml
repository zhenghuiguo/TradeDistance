<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rly"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/course_fragment_bg"
   >
    <LinearLayout
        android:id="@+id/zhang_lly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:visibility="visible"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/homework" />

        <TextView
            android:id="@+id/zuoye_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="作业一 "
            android:textColor="@color/zhang_color"
            android:textSize="@dimen/size14" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:visibility="visible"
        android:layout_alignParentRight="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/fenshu_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="10"
            android:textColor="@color/zhang_color"
            android:textSize="@dimen/size22" />

        <TextView
            android:id="@+id/fz_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/fenshu_tv"
            android:text="分"
            android:layout_marginTop="10dp"
            android:textColor="@color/zhang_color"
            
            android:textSize="@dimen/size12" />
    </RelativeLayout>
    
</RelativeLayout>