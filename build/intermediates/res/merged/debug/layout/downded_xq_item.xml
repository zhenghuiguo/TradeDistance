<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/cource_iv"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/cource_iv" >

        <LinearLayout
            android:id="@+id/lly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/downing_tv"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/kecheng_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black" />

            <!--
            <TextView
                android:id="@+id/zhang_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="第二章"
                android:textColor="@color/name_color" />

            <TextView
                android:id="@+id/jie_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="第一节"
                android:textColor="@color/name_color" />
            -->
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lly"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/state_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text=""
                android:textColor="@color/name_color" />

            <TextView
                android:id="@+id/daxiao_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:text=""
                android:textColor="@color/name_color" />
        </RelativeLayout>

        <TextView
            android:id="@+id/del_tv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="删除"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:background="@color/bnt_login_text_color"
            android:textColor="@color/white"
             />
    </RelativeLayout>

</RelativeLayout>